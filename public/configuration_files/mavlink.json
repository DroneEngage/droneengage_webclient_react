[
    {
        "name": "connect to fcb",
        "template": {
            "fcb_connection_uri_1": {
                "fieldName": "fcb_connection_uri",
                "type": "object",
                "fields": {
                    "protocol": { "type": "combo", "defaultvalue": "udp", "list_values": ["tcp", "udp"],  "desc": "tcp client or UDP listner" },
                    "ip": { "type": "text", "defaultvalue": "127.0.0.1" , "desc": "if tcp then ip of the board, otherwise make it 127.0.0.1" , "css":"bg-warning"},
                    "port": { "type": "number", "defaultvalue": 14550 }
                },
                "optional": true,
                "desc": "TCP/UDP connection settings - ONLY ONE fcb_connection_uri"
            },
            "fcb_connection_uri_2": {
                "fieldName": "fcb_connection_uri",
                "type": "object",
                "fields": {
                    "type": { "type": "combo", "defaultvalue": "serial", "list_values": ["serial"] },
                    "port": { "type": "text", "defaultvalue": "/dev/ttyUSB1" },
                    "baudrate": { "type": "number", "defaultvalue": "115200", "desc": "115200, 57600, ...etc." },
                    "dynamic": { "type": "checkbox", "defaultvalue": false, "desc": "if active then it will search from for example /dev/ttyUSB0 to /dev/ttyUSB10 so if you make it true do noot write a number next to port path." }
                },
                "optional": true,
                "desc": "serial port settings - ONLY ONE fcb_connection_uri"
            }
        }
    },
    {
                "name": "change rates",
                "template": {
                    "module_id": { "type": "text", "defaultvalue": "FCB_CTRL"},
                    "s2s_udp_target_ip": { "type": "text", "defaultvalue": "127.0.0.1"
            }
        }
    }
]